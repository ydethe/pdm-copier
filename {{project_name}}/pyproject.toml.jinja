[build-system]
requires = ["pdm-backend~=2.0.6"]
build-backend = "pdm.backend"

[project]
name = "{{project_name}}"
dynamic = ["version"]
description = "{{project_description}}"
authors = [
    { name = "{{author_name}}", email = "{{author_email}}" },
]
dependencies = [
    "rich>=13.3",
    "setuptools-scm>=7.1",
]
requires-python = ">=3.8,<3.12"

[project.urls]
"Bug Tracker" = "https://git:8443/projects/{{project_key}}/repos/{{project_name}}/browse/issues"
Homepage = "https://git:8443/projects/{{project_key}}/repos/{{project_name}}/browse"
Source = "https://git:8443/projects/{{project_key}}/repos/{{project_name}}/browse"

[tool.pylint.main]
ignore-patterns = ["kt_*.py"]

[tool.pylint.format]
max-line-length = 100

[tool.black]
line-length = 100
target-version = ['py38']
force-exclude = 'kt_.*.py'

[tool.pytest.ini_options]
addopts = [
    "--import-mode=importlib",
    "--html=build/htmldoc/tests/report.html",
    "--self-contained-html",
    "--junitxml=build/junit.xml",
    "--cov-config=tests/coverage.conf",
    "--cov={{project_name}}",
    "--doctest-modules",
]
testpaths = [
    "tests/",
]

[tool.pdm.version]
source = "scm"

[tool.pdm.build]
includes = [
    "{{project_name}}/",
]
excludes = [
    "tests",
    "examples",
    "build",
    "dev",
    "dist",
    "mockup",
    "ksy"
]

[tool.pdm.dev-dependencies]
dev = [
    "black==22.3.0",
    "coverage-badge>=1.1.0",
    "docstr-coverage>=2.2.0",
    "ipython~=7.23.1",
    "pep263",
    "pre-commit",
    "snakeviz>=2.1.2",
]
doc = [
    "pdoc3~=0.10.0",
    "pylint~=2.15.3",
]
test = [
    "pytest~=7.1.3",
    "pytest-cov~=3.0.0",
    "pytest-mock~=3.8.2",
    "pytest-instafail~=0.4.2",
    "pytest-picked~=0.4.6",
    "pytest-sugar~=0.9.5",
    "pytest-html~=3.1.1",
]

[tool.pdm.scripts]
site_packages = true
doc.shell = """\
    mkdir -p build/htmldoc/{{project_name}}
    pdoc --html --force --config latex_math=True -o build/htmldoc {{project_name}}
    coverage html -d build/htmldoc/coverage --rcfile tests/coverage.conf
    docstr-coverage {{project_name}} -miP -sp -is -idel --skip-file-doc --exclude ".*/kt.*.py" --badge=build/htmldoc/doc_badge.svg
    coverage-badge -f -o build/htmldoc/cov_badge.svg
"""
